{{> header}}

<!-- Page Content -->
<div class="container-fluid">
    <h1 class="mt-5">Overview of Airplanes</h1>

    <i class="fa fa-plus btn" id="addBtn"></i>


    <table id="dataTable" class="display table-hover">
        <thead>
        <tr>
            <th>AirplaneID</th>
            <th>city</th>
            <th>fuel in tonnes</th>
            <th>current airport</th>
        </tr>
        </thead>

    </table>

    <div class="modal fade" id="modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" onclick="deselect()" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title" id="modal-title">Title</h3>
                </div>
                <div class="modal-body">
                    <form id="modalForm" enctype='text/plain'>
                        ID:<br>
                        <input type='text' class="form-control" city='id' id="id" ><br>
                        Name:<br>
                        <input type='text' class="form-control" city='city' id="city"><br>
                        Fuel in Tonnes: <br>
                        <input type='text' class="form-control" city='fuelInTonnes' id="fuelInTonnes"><br>
                        Current airport:
                        <input type='text' class="form-control" city='currentAirport' id="currentAirport"><br>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnsubmit">Submit</button>
                    <a href="#" id="confirmbutton" data-title="Are you sure" data-trigger="focus" data-toggle="clickover" data-placement="top" class="btn btn-danger">Delete</a>
                    <button type="button" class="btn btn-default" id="btnclose" onclick="deselect()" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container -->

{{> footer}}